{
  "name": "bootstrap",
  "version": "0.1.0",
  "description": "A GitHub Action to bootstrap other actions using release assets.",
  "author": "Daniel Balcomb <daniel.balcomb@gmail.com>",
  "license": "(MIT OR Apache-2.0)",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && ncc build -o dist/main src/main.ts",
    "test": "tsc --noEmit && jest",
    "lint": "eslint **/*.ts --cache",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "coverage": "tsc --noEmit && jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ploys/bootstrap.git"
  },
  "keywords": [
    "github",
    "actions",
    "bootstrap"
  ],
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
